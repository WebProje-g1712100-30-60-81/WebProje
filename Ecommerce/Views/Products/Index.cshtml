@model ProductListModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="https://www.free-css.com/free-css-templates">Home</a> <span class="divider">/</span></li>
            <li><a href="products.html">Items</a> <span class="divider">/</span></li>
            <li class="active">Preview</li>
        </ul>
        <div class="well well-small">
            <div class="row-fluid">
                <div class="span5">
                    <div id="myCarousel" class="carousel slide cntr">
                        <div class="carousel-inner">
                            <div class="item active"><a href=""> <img src="@Model.Image" alt="website template image" style="width:100%"></a></div>
                        </div>
                        <a class="left carousel-control" href="#myCarousel" data-slide="prev">‹</a><a class="right carousel-control" href="#myCarousel" data-slide="next">›</a>
                    </div>
                </div>
                <div class="span7">
                    <h3>@Model.Name</h3>
                    <p>@Model.Category</p>
                    <hr class="soft">
                    <form action="#" method="post" class="form-horizontal qtyFrm">
                        <div class="control-group">
                            <label class="control-label"><span>@Model.Price TL</span></label>
                            <div class="controls">
                                <input type="number" class="span6" placeholder="Qty.">
                            </div>
                        </div>
                        <p>
                            <button type="submit" class="shopBtn"><span class="icon-shopping-cart"></span> Add to cart</button>
                        </p>
                    </form>
                </div>
            </div>
            <hr class="softn clr">
        </div>
    </div>